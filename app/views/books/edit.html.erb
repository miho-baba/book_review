<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div>
  <%= flash[:notice] %>
</div>

<h1>編集：Book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <div class="field">
    <h4>タイトル</h4>
    <%= f.text_field :title %>
  </div>
  <div>
    <h4>説明</h4>
    <%= f.text_area :body %>
  </div>
    <%= f.submit '内容を更新する' %>
<% end %>

<%= link_to "詳細", book_path(@book.id) %>|<%= link_to "戻る", books_path %>
