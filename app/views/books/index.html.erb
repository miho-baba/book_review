<div class="<%= 'flash-notice' if flash[:notice] %>">
  <%= flash[:notice] %>
</div>
<h1>投稿一覧：Books</h1>

<table>
  <tr>
    <th>*本のタイトル</th>
    <th>*本の説明</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "詳細", book_path(book.id) %></td>
      <td><%= link_to "編集", edit_book_path(book.id) %></td>
      <td><%= link_to "削除", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
  <% end %>
</table>

<h2>新規投稿フォーム</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <div class="field">
    <h4>タイトル</h4>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <h4>説明</h4>
    <%= f.text_area :body %>
  </div>
    <%= f.submit '投稿する' %>
<% end %>
<%= link_to "トップページに戻る", root_path %>
